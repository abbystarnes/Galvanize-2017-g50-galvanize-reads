    <% include ../partials/header %>
    <% for (var author in authors) { %>
      <div class='card'>
        <img height='100px' src="<%=authors[author].portrait_url%>" alt="">
        <h3><%=authors[author].first_name%> <%=authors[author].last_name%></h3>
        <p><%=authors[author].biography%></p>
        <a href='/author/edit' class='btn'>Edit</a>
        <a href='/author/delete' class='btn'>Remove</a>
        <ul>
          <% for (var item in join) {%>
            <% if (join[item].first_name === authors[author].first_name) { %>
              <a href='books/<%=join[item].books_id%>'><%=join[item].title%></a>
            <% } %>
          <% } %>
        </ul>
      </div>
    <% } %>
  </body>
</html>
