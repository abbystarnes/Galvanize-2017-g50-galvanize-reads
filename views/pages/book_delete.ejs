<% include ../partials/header %>
      <div class='card'>
        <img height='100px' src="<%=author.portrait_url%>" alt="">
        <h3><%=author.first_name%> <%=author.last_name%></h2>
        <p><%=author.biography%></p>
        <a href='/author/<%=author.id%>/edit' class='btn'>Edit</a>
        <a href='/author/<%=author.id%>/delete' class='btn'>Remove</a>
        <ul>
          <% for (let x = 0; x < join.length; x ++) { %>
            <% if (join[x].authors_id === author.id) { %>
              <a href='/books/<%=join[x].id%>'><%=join[x].title%></a>
            <% } %>
          <% } %>
        </ul>
      </div>
      <form class="" action="/authors/<%=author.id%>/delete" method="delete">
        <label for="check">Delete this author?</label>
        <input id="check" type="checkbox" name="check" value="">
        <input type="submit" name="submit" value="">
      </form>
  </body>
</html>
