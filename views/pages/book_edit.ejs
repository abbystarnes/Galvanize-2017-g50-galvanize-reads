<% include ../partials/header %>
    <form class="form" action="/book/<%=book.id%>/edit?_method=PUT" method="POST">
      <label for="title">title</label>
      <input value='<%=book.title%>' id="title" type="text" name="title">
      <label for="genre">genre</label>
      <input id="genre" type="text" name="genre" value="<%=book.genre%>">
      <label for="description">description</label>
      <input id="description" type="textarea" name="description" value="<%=book.description%>">
      <label for="url">book cover url</label>
      <input id="url" type="text" name="url" value="<%=book.book_cover_url%>">

      <label for="authors">select authors</label>
      <select style='display:block;height:100%;' multiple size='<%=authors.length%>' id='authors' name="authors">
        <% for (var author in authors) {%>
        <option value="<%=authors[author].id%>"><%=authors[author].first_name%> <%=authors[author].last_name%></option>
        <% } %>
      </select>
      
      <input type="submit" name="submit" value="submit">
    </form>
  </body>
</html>
